<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Relativer Pfad zum Log-Verzeichnis -->
    <property name="LOG_DIR" value="autovermietungTest/LoggerErgebnisse" />

    <!-- Appender für Log-Dateien -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/autovermietung.log</file>

        <!-- Tägliche Rotation der Log-Dateien -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/autovermietung.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <!-- Format der Log-Zeilen -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger Konfiguration -->
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>

</configuration>